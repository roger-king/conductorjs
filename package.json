{
  "name": "lighning-bolt",
  "version": "1.0.0",
  "repository": "git@github.com:roger-king/lightning-bolt-js.git",
  "license": "MIT",
  "author": "Roger King <rogr.king@gmail.com>",
  "main": "dist",
  "module": "dist-esm",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "dist-esm",
    "LICENSE.md",
    "README.md",
    "yarn.lock"
  ],
  "scripts": {
    "build": "yarn -s clean && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "clean": "rm -rf dist*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
